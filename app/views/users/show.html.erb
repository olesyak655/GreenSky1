<h3>Show User</h3>

<div class="div_main">

  <p>
      first_name: <%= @user.first_name %><br/>
  </p>

  <p>
      last_name: <%= @user.last_name %><br/>
  </p>

  <p>
      email: <%= @user.email %><br/>
  </p>

</div>
<% if get_role_for_current_user == 1 || get_role_for_current_user == 2 %>
    <div>
    <%= button_to 'Delete User', user_path(@user.id), method: :delete, class: "btn btn-info" %>
    </div>
<% end %>
<br>
<% if get_role_for_current_user == 1 || get_role_for_current_user == 2 %>
  <%= link_to "Back", admins_path %>
<% else %>
    <%= link_to "Back", users_path %>
<% end %>
