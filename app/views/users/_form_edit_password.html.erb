<%= form_tag :url => url_for(:controller => 'users', :action => 'update_password') do %>

<div class="div_main">
  <p>
      <%= label_tag "Old password" %><br/>
      <%= password_field_tag :old_password, params[:old_password] %>
  </p>

  <p>
      <%= label_tag "New password" %><br/>
      <%= password_field_tag :password %>
  </p>

  <p>
      <%= label_tag :password_confirmation %><br/>
      <%= password_field_tag :password_confirmation %>
  </p>
  <%= submit_tag "update password" %>

</div>
<% end %>
